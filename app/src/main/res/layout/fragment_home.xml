<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutFeaturedMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/mainLayout"
        app:layout_constraintBottom_toTopOf="@id/mainLayout">
        <ImageView
            android:id="@+id/viewFeaturedMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonPlayTrailer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_action_play"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtPopularMovies"
        android:text="@string/popular_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/layoutFeaturedMovie" />

    <ScrollView
        android:id="@+id/scrollPopularMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtPopularMovies"/>

    <TextView
        android:id="@+id/txtBestRatedMovies"
        android:text="@string/best_rated_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/scrollPopularMovies"/>

    <ScrollView
        android:id="@+id/scrollBestRatedMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtBestRatedMovies"/>

    <TextView
        android:id="@+id/txtAtTheMovies"
        android:text="@string/at_the_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/scrollBestRatedMovies"/>

    <ScrollView
        android:id="@+id/scrollAtTheMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtAtTheMovies"/>

    <TextView
        android:id="@+id/txtUpcomingReleases"
        android:text="@string/upcoming_releases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/scrollAtTheMovies"/>

    <ScrollView
        android:id="@+id/scrollUpcomingReleases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtUpcomingReleases"/>
</androidx.constraintlayout.widget.ConstraintLayout>